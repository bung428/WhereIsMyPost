<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/mall_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/mall_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/mall_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="LOGIN" />

    <CheckBox
        android:id="@+id/mall_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mall_id"
        android:layout_below="@+id/mall_pw"
        android:text="auto" />

    <EditText
        android:id="@+id/mall_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-210dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="pwd"
        />
</RelativeLayout>